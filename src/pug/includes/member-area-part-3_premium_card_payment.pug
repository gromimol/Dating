.main-layout.main-layout--inner
    .container.d-flex
        .left-content
            include ../includes/horizontal-banner
            .profile-content.d-flex
                include ../includes/profile-left-sidebar
                .profile-content__body
                    .h3
                        b Premium Membership - Card Payment
                    p.font-500.
                        You can pay by CREDIT or DEBIT card, if your card has visa or master card logo:
                    .card-img-group.d-flex.flex-wrap
                        img(src="img/icons/master-card-gray.png")
                        img(src="img/icons/visa-grey.png")
                    .form-block.grey-light-bg
                        form(action="#")
                            .form-block__field
                                .h3.text-uppercase.font-700 CARD PAYMENT FORM
                                p.mb-2 TS-Dating.com payment for:<br> <span class="violet-light font-700">1 month Premium Membership</span>
                                .input-wrapper
                                    span Advertisement:
                                    select.select-input
                                        option 1 month Premium Membership
                                        option 2 month Premium Membership
                                        option 3 month Premium Membership
                                p Amount: <span class="h4 violet-light font-700">â‚¬19.95</span>
